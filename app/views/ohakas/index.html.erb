<div id="iei">
<p>
  <div class="diedmans">
  <p>
    最も悔やまれた人
    <h2><%= image_tag @most_name.image.thumb.url %><%= @most_name.name %>　<%= @most_name.senko_num %>参り</h2>
  </p>
  <br>
  <p>
    最近いなくなった人
    <h2><%= image_tag @recent_name.image.thumb.url %><%= @recent_name.name %></h2>
  </p>

  </div>
  <div id="linktag">
    <%= link_to 'お墓をたてる', new_ohaka_path %>
  </div>

  <%= form_tag ohakas_path, :method=> 'get', :html => { :'data-ajax' => false } do %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "お墓を探す", :name => nil %>
  <% end %>
      <% @ohakas.each do |ohaka| %>
      <p>

        <% if ohaka.image? %>
      　　 <%= link_to image_tag(ohaka.image.thumb.url),ohaka_path(ohaka) %>
      　<% else %>
      　　<%= link_to image_tag( 'noimage.jpg') ,ohaka_path(ohaka)%>
      　<% end %>
          <%= ohaka.name %>
      </p>
      <% end %>
</p>
